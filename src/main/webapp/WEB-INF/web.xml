<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns="http://java.sun.com/xml/ns/javaee" xmlns:web="http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd"
	id="WebApp_ID" version="3.0">
	<display-name>diary</display-name>

	<servlet-mapping>
		<servlet-name>register</servlet-name>
		<url-pattern>/register.do</url-pattern>
	</servlet-mapping>

	<servlet>
		<servlet-name>register</servlet-name>
		<servlet-class>controller.RegisterAction</servlet-class>
	</servlet>


	<servlet-mapping>
		<servlet-name>login</servlet-name>
		<url-pattern>/login.do</url-pattern>
	</servlet-mapping>

	<servlet>
		<servlet-name>login</servlet-name>
		<servlet-class>controller.LoginAction</servlet-class>
	</servlet>

	<servlet-mapping>
		<servlet-name>add_post</servlet-name>
		<url-pattern>/add_post.do</url-pattern>
	</servlet-mapping>

	<servlet>
		<servlet-name>add_post</servlet-name>
		<servlet-class>controller.AddPostAction</servlet-class>
	</servlet>
	
	<servlet-mapping>
		<servlet-name>diary_list</servlet-name>
		<url-pattern>/diary_list.do</url-pattern>
	</servlet-mapping>

	<servlet>
		<servlet-name>diary_list</servlet-name>
		<servlet-class>controller.DiaryListAction</servlet-class>
	</servlet>


	<servlet-mapping>
		<servlet-name>common</servlet-name>
		<url-pattern>*.do</url-pattern>
	</servlet-mapping>

	<servlet>
		<servlet-name>common</servlet-name>
		<servlet-class>controller.JspDispatcher</servlet-class>
	</servlet>

	<filter>
		<filter-name>CharsetEncodingFilter</filter-name>
		<filter-class>filter.EncodingFIlter</filter-class>
		<init-param>
			<param-name>encoding</param-name>
			<param-value>UTF-8</param-value>
		</init-param>
	</filter>

	<!-- 对哪些起作用,对jsp还是servlet -->
	<filter-mapping>
		<filter-name>CharsetEncodingFilter</filter-name>
		<!-- 配置一下,让谁使用Filter,这里配置的是对所有的jsp起作用 -->

		<url-pattern>*.do</url-pattern>
	</filter-mapping>

	<error-page>
		<error-code>404</error-code>
		<location>/angular.html</location>
	</error-page>

	<error-page>
		<error-code>500</error-code>
		<location>/angular.html</location>
	</error-page>

</web-app>